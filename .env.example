# ==========================================
# Customer Categorizer - Environment Variables
# ==========================================
# Copy this file to .env and fill in your actual values

# ==========================================
# MongoDB Configuration
# ==========================================
# MongoDB connection string for database operations
# Format: mongodb+srv://username:password@cluster.mongodb.net/database_name
# For local MongoDB: mongodb://localhost:27017
MONGO_DB_URL=mongodb+srv://username:password@cluster.mongodb.net/customer_db

# ==========================================
# AWS Configuration
# ==========================================
# AWS Access Key ID - Get from AWS IAM Console
AWS_ACCESS_KEY_ID=your_aws_access_key_here

# AWS Secret Access Key - Get from AWS IAM Console
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# AWS Region - e.g., us-east-1, ap-south-1, eu-west-1
AWS_REGION=ap-south-1

# ==========================================
# AWS S3 Bucket Configuration
# ==========================================
# S3 bucket for storing trained models
TRAINING_BUCKET_NAME=customer-categorizer-training

# S3 bucket for storing prediction data and results
PREDICTION_BUCKET_NAME=customer-categorizer-prediction

# ==========================================
# Application Configuration
# ==========================================
# Server host address
APP_HOST=0.0.0.0

# Server port number
APP_PORT=5000

# Application environment: development, staging, production
APP_ENV=development

# ==========================================
# Database Configuration
# ==========================================
# Database name
DATABASE_NAME=customer_segmentation_db

# Collection name for customer data
COLLECTION_NAME=customer_marketing_data

# ==========================================
# Model Configuration
# ==========================================
# Number of clusters for customer segmentation
N_CLUSTERS=3

# Clustering algorithm: hierarchical, kmeans, agglomerative
CLUSTERING_ALGORITHM=agglomerative

# Number of PCA components for dimensionality reduction
PCA_COMPONENTS=2

# ==========================================
# Logging Configuration
# ==========================================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file location
LOG_FILE_PATH=./src/artifact/logs/customer_segmentation.log

# ==========================================
# Data Configuration
# ==========================================
# Train-test split ratio (0.0 to 1.0)
TRAIN_TEST_SPLIT_RATIO=0.2

# Path to raw data file
RAW_DATA_PATH=./notebooks/marketing_campaign.csv

# Path to processed data
PROCESSED_DATA_PATH=./notebooks/data/clustered_data.csv

# ==========================================
# Feature Configuration
# ==========================================
# Number of features to select (if using feature selection)
N_FEATURES_TO_SELECT=15

# ==========================================
# Model Performance Thresholds
# ==========================================
# Minimum expected model accuracy/score
MODEL_EXPECTED_SCORE=0.6

# Threshold for model improvement in evaluation
MODEL_IMPROVEMENT_THRESHOLD=0.02

# ==========================================
# Optional: Development Configuration
# ==========================================
# Enable debug mode (set to True for development)
DEBUG_MODE=False

# Enable detailed logging
VERBOSE_LOGGING=True

# ==========================================
# Optional: Email Notifications
# ==========================================
# Email service for sending notifications (if implemented)
EMAIL_SENDER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password
NOTIFICATION_EMAIL=admin@example.com

# ==========================================
# Optional: API Keys
# ==========================================
# If using any external APIs
EXTERNAL_API_KEY=your_api_key_here

# ==========================================
# Notes:
# ==========================================
# 1. Never commit .env file with actual credentials to GitHub
# 2. Use .env.example as a template for new developers
# 3. Keep sensitive information secure
# 4. For production, use AWS Secrets Manager or similar services
# 5. Make sure all variables are set before running the application
